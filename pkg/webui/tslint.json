{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js",
            "src/api/*.js",
            "src/api/*.ts"
        ]
    },
    "rules": {
        "ordered-imports": [
            false
        ],
        "object-literal-sort-keys": [
            false
        ],
        "interface-name": [
            false
        ],
        "no-console": false,
        "max-classes-per-file": [true, 5]
    }
}
